<div class="blog-post">
  <div class="blog-post-header">
    {{blog_title}}
  </div>
  <div class="blog-body">
    <p>

      {{blog_body}}
    </p>
    <p>
      Author:
      {{blog_user_id}}
    </p>
   
    <button class="btn btn-outline-danger delete-blog" type="button" data-id="{{blog_id}}" >Delete</button>
    <a href='/' class="btn btn-outline-warning " role="button">Back</a>
  </div>
  <div class="blog-comments border border-primary rounded-lg">

    <h3>Comments:</h3>
    {{#each comments}}
    <div class="comment">
      <p>{{this.content}}</p>
      <small>by {{this.author}}</small>
      <button class="btn btn-outline-warning delete-comment" type="button" data-comment-id="{{comment_id}}">Delete</button>

    </div>
    {{/each}}
    <form id="comment-form">
      <div class="form-group">
        <label for="comment-content">Comment:</label>
        <textarea class="form-control" id="comment-content" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>