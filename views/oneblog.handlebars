<div class="blog-post">
  <div class="blog-post-header">
    {{title}}
  </div>
  <div class="blog-body">
    <p>

      {{body}}
    </p>
    <p>
      Author:
      {{User.username}}
    </p>

    <button class="btn btn-outline-danger delete-blog" type="button" data-id="{{id}}">Delete</button>
    <a href='/' class="btn btn-outline-warning " role="button">Back</a>
  </div>
  <div class="blog-comments border border-primary rounded-lg">

    <h3>Comments:</h3>
    {{#each comments}}
    <div class="comment">
      <p>{{text}}</p>
      <small>by {{User.username}}</small>
      <button class="btn btn-outline-warning delete-comment" type="button" data-comment-id="{{id}}">Delete</button>

    </div>
    {{/each}}
    <form id="comment-form">
      <div class="form-group">
        <label for="comment-content">Comment:</label>
        <textarea class="form-control" id="comment-content" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-warning">Submit</button>
    </form>
  </div>
</div>

<script src="/js/blog.js"></script>
<script src="/js/comment.js"></script>