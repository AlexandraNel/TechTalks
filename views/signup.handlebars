<div class="container-fluid mb-8">

    <div class="container-fluid row align-items-center text-center py-2">
        <h1 class="py-3">Sign Up!</h1>
    </div>

    <div>
        <form class="d-grid gap-3">

            <div>
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="userEmail" aria-describedby="email">
            </div>

            <div>
                <label for="userName" class="form-label">User Name</label>
                <input type="userName" class="form-control" id="userName" aria-describedby="name">
            </div>

            <div>
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password">
            </div>

            <div>
                <button type="submit" class="btn btn-warning">Submit</button>
            </div>

        </form>
    </div>

</div>